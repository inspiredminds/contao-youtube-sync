{% extends "@Contao/be_main" %}

{% set title = 'YouTube Synchronisation' %}
{% set headline = title %}

{% block main_content %}
  <div id="tl_buttons">
    <a href="{{ path('contao_backend', {do: 'news'}) }}" class="header_back" title="">{{ 'MSC.goBack'|trans([], 'contao_default') }}</a>
  </div>
  <div id="calendar_sync_trigger" class="maintenance_inactive">

    <h2 class="sub_headline">{{ 'contao_youtube_sync.backend.section_headline'|trans }}</h2>

    {% if count_label is defined %}
      <p class="tl_listing_container">{{ count_label }}</p>
    {% else %}
      <p class="tl_listing_container">{{ 'contao_youtube_sync.backend.dispatched'|trans }}</p>
    {% endif %}
    
    <form class="tl_form" method="get">
      <div class="tl_submit_container">
        <button type="submit" name="maintenance" class="tl_submit">{{ 'contao_youtube_sync.backend.submit_label'|trans }}</button>
      </div>
    </form>

  </div>
{% endblock %}
